<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="network_account.CreateAccountController"
            prefHeight="400.0" prefWidth="600.0" styleClass="borderPane">
    <center>
        <GridPane alignment="center" hgap="25" vgap="10"
                  prefHeight="300.0" prefWidth="500.0" styleClass="gridPane">

            <padding><Insets left="15" right="15"/></padding>


            <columnConstraints>
                <ColumnConstraints percentWidth="50"  />
                <ColumnConstraints percentWidth="50" />
            </columnConstraints>

            <Label fx:id="accountLabel" text="Create Account" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="welcomeLabel"/>
            <Label fx:id="usernameLabel" text="Username: " GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="textfieldLabel"/>
            <TextField fx:id="usernameTextField" text="" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="textfield"/>
            <Label fx:id="passwordLabel" text="Password: " GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="textfieldLabel"/>
            <PasswordField fx:id="passwordField1" text="" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="textfield"/>
            <Label fx:id="confirmPasswordLabel" text="Confirm Password: " GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="textfieldLabel"/>
            <PasswordField fx:id="passwordField2" text="" GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="textfield"/>
            <Button fx:id="createAccountButton" text="Create Account" GridPane.columnIndex="0" GridPane.rowIndex="4"
                    onKeyPressed="#createAccount" styleClass="button"/>
        </GridPane>
    </center>

    <stylesheets>
        <URL value="@styles/networkstyle.css" />
    </stylesheets>
</BorderPane>
